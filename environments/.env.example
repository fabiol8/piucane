# Google Analytics
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# AI Configuration (Gemini)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro
AI_RATE_LIMIT_PER_HOUR=100

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@piucane.com
SENDGRID_FROM_NAME=Pi√πCane

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Push Notifications (FCM)
FCM_SERVER_KEY=your-fcm-server-key
NEXT_PUBLIC_VAPID_KEY=your-vapid-public-key

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/piucane

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Feature Flags
ENABLE_GAMIFICATION=true
ENABLE_AI_AGENTS=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_WAREHOUSE=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Development
NODE_ENV=development
PORT=3000
ADMIN_PORT=3001
API_PORT=3002

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
STRIPE_WEBHOOK_ENDPOINT=/api/webhooks/stripe

# CMP (Consent Management)
CMP_API_KEY=your-cmp-api-key
COOKIEBOT_ID=your-cookiebot-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
CACHE_TTL=3600
CDN_URL=https://cdn.piucane.com

# Business Configuration
FREE_SHIPPING_THRESHOLD=49.99
DEFAULT_CURRENCY=EUR
DEFAULT_LOCALE=it-IT
TIMEZONE=Europe/Rome

# Backup and Recovery
BACKUP_BUCKET=piucane-backups
BACKUP_SCHEDULE=0 2 * * *

# Admin Configuration
ADMIN_EMAIL=admin@piucane.com
ADMIN_DEFAULT_PASSWORD=change-me-immediately