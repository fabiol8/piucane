{
  "name": "piucane",
  "version": "1.0.0",
  "description": "PiuCane - Complete Pet Care Platform with E-commerce, Subscriptions & AI Agents",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "api"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:api": "npm run dev --workspace=api",
    "build": "turbo run build",
    "build:packages": "npm run build --workspace=packages/lib && npm run build --workspace=packages/ui",
    "build:apps": "npm run build --workspace=apps/web && npm run build --workspace=apps/admin",
    "build:api": "npm run build --workspace=api",
    "test": "turbo run test",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:a11y": "axe --tags wcag2aa --reporter junit",
    "test:lighthouse": "lhci autorun",
    "test:coverage": "jest --coverage",
    "test:firestore-rules": "firebase emulators:exec --only firestore \"npm run test:firestore-rules --workspace=api\"",
    "test:storage-rules": "firebase emulators:exec --only storage \"npm run test:storage-rules --workspace=api\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean",
    "start": "turbo run start",
    "deploy": "firebase deploy",
    "deploy:staging": "firebase deploy --project piucane-staging",
    "deploy:prod": "firebase deploy --project piucane-prod",
    "emulator": "firebase emulators:start",
    "seed:test": "tsx scripts/seed/test-data.ts",
    "cta:check": "tsx scripts/validate/cta-registry.ts",
    "ga4:check": "tsx scripts/validate/ga4-schema.ts",
    "docs:generate": "tsx scripts/docs/generate-indices.ts",
    "security:audit": "npm audit --audit-level=high",
    "release": "semantic-release",
    "setup:env": "cp .env.example .env.local",
    "setup:complete": "npm install && npm run setup:env && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.12.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "semantic-release": "^22.0.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "dependencies": {
    "firebase": "^10.7.0",
    "firebase-admin": "^11.11.1",
    "next": "^14.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "stripe": "^14.7.0",
    "@google/generative-ai": "^0.1.3",
    "sendgrid": "^5.2.3",
    "twilio": "^4.19.0",
    "mjml": "^4.15.3",
    "handlebars": "^4.7.8",
    "sharp": "^0.32.6",
    "zod": "^3.22.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "@tanstack/react-query": "^5.8.4",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "framer-motion": "^10.16.5",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.294.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiozanellati/piucane.git"
  },
  "keywords": [
    "petcare",
    "ecommerce",
    "subscription",
    "pwa",
    "firebase",
    "ai",
    "typescript",
    "nextjs"
  ],
  "author": "Fabio Zanellati <fabio@piucane.it>",
  "license": "Proprietary"
}