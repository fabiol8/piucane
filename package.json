{
  "name": "piucane-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PiuCane - Il benessere del tuo cane",
  "keywords": ["ecommerce", "pets", "dogs", "nutrition", "pwa"],
  "author": "PiuCane Team",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "api",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:api": "npm run dev --workspace=api",
    "build": "npm run build:packages && npm run build:apps && npm run build:api",
    "build:packages": "npm run build --workspace=packages/lib && npm run build --workspace=packages/ui",
    "build:apps": "npm run build --workspace=apps/web && npm run build --workspace=apps/admin",
    "build:api": "npm run build --workspace=api",
    "build:web": "npm run build --workspace=apps/web",
    "build:admin": "npm run build --workspace=apps/admin",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "test:e2e:chromium": "npm run test:e2e:chromium --workspaces --if-present",
    "test:e2e:firefox": "npm run test:e2e:firefox --workspaces --if-present",
    "test:e2e:webkit": "npm run test:e2e:webkit --workspaces --if-present",
    "test:a11y": "npm run test:a11y --workspaces --if-present",
    "test:firestore-rules": "firebase emulators:exec --only firestore \"npm run test:firestore-rules --workspace=api\"",
    "test:storage-rules": "firebase emulators:exec --only storage \"npm run test:storage-rules --workspace=api\"",
    "test:staging": "npm run test:staging --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules/.cache",
    "install:all": "npm install && npm install --workspaces",
    "validate:cta": "node scripts/validation/validate-cta.js",
    "validate:ga4": "node scripts/validation/validate-ga4.js",
    "check:cta-coverage": "node scripts/validation/check-cta-coverage.js",
    "docs:api": "node scripts/docs/generate-api-docs.js",
    "docs:index": "node scripts/docs/update-doc-indices.js",
    "docs:update": "npm run docs:api && npm run docs:index",
    "release:notes": "node scripts/release/generate-notes.js",
    "health:check": "node scripts/health/check-endpoints.js",
    "setup:env": "cp environments/.env.example .env.local",
    "setup:firebase": "firebase init",
    "setup:complete": "npm run install:all && npm run setup:env && npm run build",
    "deploy": "firebase deploy",
    "deploy:staging": "firebase deploy --project piucane-staging",
    "deploy:prod": "firebase deploy --project piucane-prod",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "emulators:start": "firebase emulators:start",
    "emulators:kill": "firebase emulators:kill"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiol8/piucane.git"
  },
  "bugs": {
    "url": "https://github.com/fabiol8/piucane/issues"
  },
  "homepage": "https://piucane.it"
}