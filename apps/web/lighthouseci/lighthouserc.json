{
  "ci": {
    "collect": {
      "url": [
        "/",
        "/shop",
        "/checkout",
        "/account",
        "/subscriptions",
        "/inbox"
      ],
      "startServerCommand": "npm run start --workspace=apps/web",
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:pwa": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:performance": ["error", { "minScore": 0.85 }]
      }
    }
  }
}
